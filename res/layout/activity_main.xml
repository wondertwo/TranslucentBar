<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/btn_image_translucent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imageTranslucentBar"
        android:onClick="translucentBar"
        />
    
    <Button 
        android:id="@+id/btn_color_translucent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/colorTranslucentBar"
        android:onClick="translucentBar"
        />

</LinearLayout>
